/* pages/startTest/startTest.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.progress-container {
  width: 100%;
  margin-bottom: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.progress {
  margin-bottom: 32rpx;
}

/* 进度条样式 - 只设置容器宽度，不影响进度显示 */
.progress-container t-progress {
  width: 100%;
  display: block;
}


.question-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.question-number {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.question-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.image-container {
  width: 100%;
  margin: 32rpx 0;
  display: flex;
  justify-content: center;
}

.image-container image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.options-container {
  margin-top: 32rpx;
}

.options {
  margin-bottom: 32rpx;
}

.t-radio {
  margin-bottom: 24rpx;
}

.t-radio__label {
  font-size: var(--td-font-size-m);
  color: var(--td-text-color-primary);
}

.correct {
  color: var(--td-success-color);
}

.wrong {
  color: var(--td-error-color);
}

.category {
  margin-bottom: 32rpx;
  text-align: center;
}

.navigation {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
}

.navigation .t-button {
  flex: 1;
}

.completion {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result {
  width: 100%;
}

.completion-text {
  font-size: 24px;
  margin-bottom: 20px;
}

.view-score-btn {
  background-color: #0052d9;
  color: white;
  padding: 10px 20px;
  border-radius: 4px;
  border: none;
}

/* 对话框图片样式 */

.dialog-image {
  width: 240rpx;
  height: 240rpx;
  margin: 32rpx auto;
  display: block;
  border-radius: 8rpx;
}
