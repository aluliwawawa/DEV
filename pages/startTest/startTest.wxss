/* pages/startTest/startTest.wxss */
.container {
  padding: 0 !important;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: block !important;
  align-items: unset !important;
  justify-content: unset !important;
  height: auto !important;
  box-sizing: border-box !important;
}

/* 第一个白色容器：进度条 + 问题 + 图片 */
.content-container {
  background-color: #fff;
  border-radius: 0;
  padding: 32rpx 0 32rpx 0;
  margin: 0 0 8rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.progress-container {
  width: 100%;
  margin-bottom: 50rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.progress-container t-progress {
  width: 100%;
  display: block;
}

.question-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding: 0 32rpx;
}

.image-container {
  width: 100%;
  margin: 16rpx 0 24rpx 0;
  display: flex;
  justify-content: center;
}

.image-container image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

/* 第二个白色容器：所有选项 */
.options-container {
  background-color: #fff;
  border-radius: 0;
  padding: 16rpx 0 32rpx 0;
  margin: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.options-container .t-radio-group {
  padding: 32rpx 32rpx 0 32rpx;
}

/* 对话框图片样式 */

.dialog-image {
  width: 240rpx;
  height: 240rpx;
  margin: 32rpx auto;
  display: block;
  border-radius: 8rpx;
}
