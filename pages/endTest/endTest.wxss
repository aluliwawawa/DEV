.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.result {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-details {
  margin-top: 32rpx;
  padding: 32rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.score-info {
  margin-bottom: 24rpx;
  text-align: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #dee2e6;
}

.score-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052d9;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.button-group {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
} 