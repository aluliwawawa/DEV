.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--td-bg-color-page);
  padding: 32rpx;
}

.result {
  width: 100%;
}

.score-display {
  margin: 48rpx 0;
  text-align: center;
}

.score-text {
  font-size: var(--td-font-size-xl);
  color: var(--td-text-color-primary);
  font-weight: 600;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.result-image {
  width: 240rpx;
  height: 240rpx;
  margin: 32rpx auto;
  display: block;
} 